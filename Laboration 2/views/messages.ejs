<style type="text/css">
    body {
        margin: 0;
        padding: 200px 0 0;

        background: #C3D9FF url(pic/logo.png) no-repeat center top;
        height: 4000px;

        font-family: verdana, helvetica, sans-serif;
        font-size: 12px;
    }

    #messageboard {
        width: 600px;
        margin: auto;
        border: 1px solid silver;
        background: white;
        padding: 10px 10px 20px;
    }

    #numberOfMess {
        float: right;
        font-size: small;
        color: Gray;
    }

    html {
        background: url(pic/b.jpg);
    }

    .message {
        position: relative;
        width: 590px;
        background-color: #CDEB8B;
        color: gray;
        margin-bottom: 5px;
        padding: 5px;
        font-size: 22px;
        border: 2px solid #73880A;
    }

    .message img {
        float: right;
        padding-left: 5px;
        border: none;
    }

    .message > p:last-of-type {
        margin-bottom: 0;
    }

    .message span {
        position: absolute;
        right: 10px;
        bottom: 10px;
        font-size: 10px;
        color: gray;
    }

    #inputText {
        width: 590px;
        height: 150px;
        border: 1px solid silver;
        font-family: verdana, helvetica, sans-serif;
        font-size: 20px;
        padding: 5px;

    }

    #inputName {
        width: 300px;
        height: 50px;
        border: 1px solid silver;
        font-family: verdana, helvetica, sans-serif;
        font-size: 20px;
        padding: 5px;
    }

    .blur {
        background-color: white;
    }

    .focus {
        background-color: #F3FCE4;
    }

    .clear {
        clear: both;
    }
</style>

<div id="messageboard">
    <form action="/logout" method="post">
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
        <input class="btn btn-danger" type="submit" value="Logout" style="margin-bottom: 20px;" />
    </form>

    <div id="messagearea"></div>

    <p id="numberOfMess">Antal meddelanden: <span id="nrOfMessages">0</span></p>
    <label for="inputName">Name:</label><br />
    <input id="inputName" type="text" name="name" /><br />
    <label for="inputText">Message:</label><br />
    <textarea name="mess" id="inputText" cols="55" rows="6"></textarea>
    <input class="btn btn-primary" type="button" id="buttonSend" value="Write your message" />
    <span class="clear">&nbsp;</span>
</div>
